{
	"compilerOptions": {
		"lib": ["es6"],
		"target": "es6",
		"moduleResolution": "node",
		"module": "esnext",
		"outDir": "dist",
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"sourceMap": true
	},
	"ts-node": {
		"esm": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
